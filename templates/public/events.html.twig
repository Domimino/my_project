{% extends 'base.html.twig' %}

{% block title %}Events{% endblock %}

{% block body %}
    <h1>Upcoming Events</h1>
    <ul>
        {% for event in events %}
            <li>
                <h2>{{ event.name }}</h2>
                <p>{{ event.date|date('F j, Y') }}</p>
                <p>{{ event.description }}</p>
            </li>
        {% else %}
            <p>No events available at the moment.</p>
        {% endfor %}
    </ul>
{% endblock %}
